{
  "presets": [
    ["@babel/env"],
    ["@babel/stage-0", {"decoratorsLegacy": true}],
    ["@babel/react"],
    ["@babel/typescript"]
  ],
  "plugins": [
    [
      "module-resolver",
      {
        "extensions": [
          ".js",
          ".jsx",
          ".ts",
          ".tsx"
        ],
        "root": [
          "./src"
        ],
        "alias": {
          "components": "./src/components",
          "config": "./src/config",
          "lib": "./src/lib",
          "pages": "./src/pages",
          "state": "./src/state",
          "types": "./src/types"
        }
      },
    ]
  ]
}